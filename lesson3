let dayOfWeek = new Date().getDay(); // Get current day of the week (0 for Sunday, 1 for Monday, etc.)
let dayName;

switch (dayOfWeek) {
  case 0:
    dayName = "Sunday";
    break;
  case 1:
    dayName = "Monday";
    break;
  case 2:
    dayName = "Tuesday";
    break;
  case 3:
    dayName = "Wednesday";
    break;
  case 4:
    dayName = "Thursday";
    break;
  case 5:
    dayName = "Friday";
    break;
  case 6:
    dayName = "Saturday";
    break;
  default:
    dayName = "Invalid day"; // Should not happen with getDay()
}

console.log(`Today is ${dayName}.`);
